algoritmo "Antecessor e sucessor de um número"

var
   num, antecessor, sucessor: inteiro

inicio
   escreva("Digite um número: ")
   leia(num)
   antecessor <- num - 1
   sucessor <- num + 1
   escreva("O antecessor de " + num + " é " + antecessor + ".")
   escreva("O sucessor de " + num + " é " + sucessor + ".")
fim_algoritmo
